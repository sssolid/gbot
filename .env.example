# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Database Configuration
# SQLite (default): sqlite+aiosqlite:///guild_bot.sqlite
# PostgreSQL: postgresql+asyncpg://user:pass@host:port/database
DATABASE_URL=sqlite+aiosqlite:///guild_bot.sqlite

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Additional Configuration
# These can be set but are not required for basic operation

# Bot Behavior
AUTO_SYNC_COMMANDS=true
COMMAND_PREFIX=!

# Feature Flags
ENABLE_MESSAGE_LOGGING=true
ENABLE_ENHANCED_ONBOARDING=true
ENABLE_CHARACTER_PROFILES=true

# Development Options (for testing)
DEV_MODE=false
DEV_GUILD_ID=your_test_guild_id_here